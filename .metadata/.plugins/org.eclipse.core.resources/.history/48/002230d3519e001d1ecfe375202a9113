function selecionar(){

  var pacote = document.getElementsByClassName('.form-check-input');
    for (var i = 0; i < pacote.length; i++){
        if ( pacote[i].checked ) {
            if(pacote[i].value == "adm"){
                var Pacote_i = "adm";
                console.log("adm")
            }else if (pacote[i].value == "cli") {
                var Pacote_ii = "cli";
                console.log("cli")
            }else if (pacote[i].value == "com") {
                var Pacote_iii = "Pacote TRÊS";
                alert(Pacote_iii);
            }
        }
    }
  
}